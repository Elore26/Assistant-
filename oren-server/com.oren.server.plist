<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.oren.server</string>

  <key>ProgramArguments</key>
  <array>
    <string>/usr/local/bin/node</string>
    <string>src/index.mjs</string>
  </array>

  <key>WorkingDirectory</key>
  <string>/Users/oren/Assistant-/oren-server</string>

  <key>RunAtLoad</key>
  <true/>

  <key>KeepAlive</key>
  <true/>

  <key>StandardOutPath</key>
  <string>/tmp/oren-server-stdout.log</string>
  <key>StandardErrorPath</key>
  <string>/tmp/oren-server-stderr.log</string>

  <key>EnvironmentVariables</key>
  <dict>
    <key>PATH</key>
    <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
    <key>HOME</key>
    <string>/Users/oren</string>
  </dict>

  <!-- Restart on crash after 10 seconds -->
  <key>ThrottleInterval</key>
  <integer>10</integer>
</dict>
</plist>
